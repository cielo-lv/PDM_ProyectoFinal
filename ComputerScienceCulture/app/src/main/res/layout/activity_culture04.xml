<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Culture04Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COBOL"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black" />

            <!-- Imagen -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/cultura4_cobol" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="16dp"
                android:text="COBOL, desarrollado en 1959, sigue siendo crucial para sistemas bancarios y gubernamentales. Utiliza una sintaxis basada en el lenguaje natural para facilitar la lectura. Aunque es menos común hoy en día, sus aplicaciones críticas incluyen procesamiento de transacciones y gestión de datos financieros. Curiosamente, muchos programadores retirados son llamados para mantener estos sistemas vitales."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/black" />

            <!-- Enlaces -->
            <LinearLayout
                android:id="@+id/links_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/link1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:text="COBOL base de sistemas críticos"
                    android:textColor="@color/blue" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/link2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El mundo depende de COBOL"
                    android:textColor="@color/blue"
                    android:clickable="true"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/link3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COBOL vuelve a ser popular"
                    android:textColor="@color/blue"
                    android:clickable="true"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Botón de agregar a la biblioteca -->
            <Button
                android:id="@+id/add_to_library_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/links_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Agregar a biblioteca"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>